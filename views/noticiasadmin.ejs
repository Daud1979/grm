<%- include('./partials/headeradmin') %>
<div class="container containercarrusel">
      <h2>Subir Nueva Noticia</h2>

  <div class="carrusel-formulario">
     <div class="col-12 mb-2">
        <label class="form-label">Titulo de Noticia <span class="text-danger">*</span></label>
        <input type="text" name="titulo" id="titulo" class="form-control form-control-sm" required>
  </div>
  <div class="col-12 mb-2">
  <label for="miTextarea" class="form-label">Describa la noticia</label>
  <textarea class="form-control" id="descripcion" name="descripcion" rows="4" placeholder="Escribe tu mensaje aquÃ­..."></textarea>
</div>

  <div class="col-12 mb-2">
        <label class="form-label">Imagen (Foto)</label>
        <input type="file" name="imagenFile" id="imagenFile" accept="image/*" class="form-control form-control-sm">
  </div>
  <button class="carrusel-btn" id="btnSubirimagen">Registrar Noticia</button>
  </div>


  <h3>Listado de Noticias Registradas</h3>
  <table class="carrusel-tabla ">
  <thead>
    <tr>
      <th>#</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Imagen</th>     
      <th>Acciones</th> <!-- Nueva columna -->
    </tr>
  </thead>
<tbody id="noticiasdatos">
  <% carrusel.forEach((img, i) => { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= img.titulo %></td>
      <td><%= img.descripcion %></td>
      <td><img src="<%= img.url %>" style="height:70px"></td>
      <td>
        <button 
          id="eliminarfila"
                  class="carrusel-btn-eliminar"
                  data-id="<%= img.id %>">
            Eliminar
          </button>
      </td>
    </tr>
  <% }) %>
</tbody>

</table>

</div>
<script src="/js/noticiasadmin.js"></script>
<%- include('./partials/footer') %>